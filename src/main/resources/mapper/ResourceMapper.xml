<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.shanzhaozhen.dynamicadmin.mapper.ResourceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.shanzhaozhen.dynamicadmin.entity.sys.ResourceDO">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="type" property="type" />
        <result column="path" property="path" />
        <result column="pid" property="pid" />
        <result column="icon" property="icon" />
        <result column="priority" property="priority" />
        <result column="create_by" property="createBy" />
        <result column="created_date" property="createdDate" />
        <result column="last_modified_by" property="lastModifiedBy" />
        <result column="last_modified_date" property="lastModifiedDate" />
    </resultMap>

    <resultMap autoMapping="true" type="org.shanzhaozhen.dynamicadmin.entity.sys.ResourceDO" id="ResourceRoleMap">
        <id property="id" column="id"></id>
        <collection property="roleDOs" column="id" select="org.shanzhaozhen.dynamicadmin.mapper.RoleMapper.selectRoleByResourceId">
        </collection>
    </resultMap>

    <select id="selectResourceRoleListByTypeAndUserId" resultMap="ResourceRoleMap">
        select * from sys_resource re
        <if test="userId != null">
            inner join sys_role_resource srr on srr.resource_id = re.id
            inner join sys_role ro on ro.id = srr.role_id
            inner join sys_user_role sur on sur.user_id = #{userId} and ro.id = sur.role_id
        </if>
        where re.type = #{type} group by re.id
    </select>


</mapper>
