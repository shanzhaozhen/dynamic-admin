<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.shanzhaozhen.dynamicadmin.mapper.RouteMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.shanzhaozhen.dynamicadmin.entity.sys.RouteDO">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="path" property="path" />
        <result column="pid" property="pid" />
        <result column="component" property="component" />
        <result column="redirect" property="redirect" />
        <result column="title" property="title" />
        <result column="icon" property="icon" />
        <result column="priority" property="priority" />
        <result column="hidden" property="hidden" />
        <result column="alwaysShow" property="alwaysShow" />
        <result column="noCache" property="noCache" />
        <result column="affix" property="affix" />
        <result column="breadcrumb" property="breadcrumb" />
        <result column="props" property="props" />
        <result column="description" property="description" />
        <result column="create_by" property="createBy" />
        <result column="created_date" property="createdDate" />
        <result column="last_modified_by" property="lastModifiedBy" />
        <result column="last_modified_date" property="lastModifiedDate" />
    </resultMap>

    <resultMap autoMapping="true" type="org.shanzhaozhen.dynamicadmin.dto.RouteDTO" id="RouteRoleMap">
        <id property="id" column="id"></id>
        <collection property="roles" column="id" select="org.shanzhaozhen.dynamicadmin.mapper.RoleMapper.getRoleByRouteId">
        </collection>
    </resultMap>

    <select id="getRouteRoleListByUserId" resultMap="RouteRoleMap">
        select * from sys_menu sm
        <if test="userId != null">
            inner join sys_role_menu srm on srm.menu_id = sm.id
            inner join sys_role ro on ro.id = srm.role_id
            inner join sys_user_role sur on sur.user_id = #{userId} and ro.id = sur.role_id
        </if>
    </select>


</mapper>
